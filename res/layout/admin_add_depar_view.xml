<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@drawable/s_titile_bar">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加部门"
        android:layout_centerInParent="true"
        android:textSize="18sp"/>
</RelativeLayout>
    
    <LinearLayout 
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="部门编号:"/>
        <EditText 
            android:id="@+id/et_add_dno"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="部门名称:"/>
        <EditText 
            android:id="@+id/et_add_dname"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="部门经理:"/>
        <EditText 
            android:id="@+id/et_add_dhead"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="所在地址:"/>
        <EditText 
            android:id="@+id/et_add_daddress"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="联系电话:"/>
        <EditText 
            android:id="@+id/et_add_dtel"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">
    
    <LinearLayout 
        android:id="@+id/ll_tt"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/bt_department_add_save"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/bt_background"
        android:text="保存"/>
    <Button 
        android:id="@+id/bt_department_add_cancel"
        android:layout_marginLeft="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bt_background"
        android:text="取消"/>
	</LinearLayout>
	
    
    </RelativeLayout>

</LinearLayout>
